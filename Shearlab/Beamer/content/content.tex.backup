\begin{frame}\frametitle{Cone-Adapted Shearlet Systems}
{\color{ZurichBlue} Definition: (Kittipoom, Kutyniok, Lim; 2012)}\\
Let $\phi, \psi, \tilde{\psi} \in L^2(\R^2)$, $c= [c_1,c_2]^T \in \R^2$ with $c_1,c_2>0$. Then the {\color{green}cone-adapted shearlet
system} is defined by $(\psi_{j,k,m,\iota})_{(j,k,m,\iota)\in \Lambda},$
where
$$
\Lambda:= \{(j,k,m,\iota): \iota \in \{-1,0,1\}, |\iota| j\geq j \geq 0, |k| \leq |\iota| \lceil2^{\frac{j}{2}}\rceil, m \in \Z^2\}
$$
and
\vspace{-1cm}
\begin{multicols}{2}
\begin{align*}
\psi_{j,0,m,0} = & \ \phi(\cdot - c_1 m),\\
\psi_{j,k,m,1}  = & \ 2^{\frac{3j}{4}}\psi(S_k A_{j}\cdot -  M_c m ),\\
\psi_{j,k,m,-1} = &  \ 2^{\frac{3j}{4}}\tilde{\psi}(S_k^T \tilde{A}_{j}\cdot -  M_{\tilde{c}} m ),
\end{align*}
\columnbreak
\centering

\

\includegraphics[width = 3cm]{images/tilingcones.jpg}
\end{multicols}

\vspace{-0.3cm}
with $M_c:= \diag( c_1 , c_2 )$, $M_{\tilde{c}}= \diag( c_2 ,c_1)$, and $\tilde{A}_{2^j} = \diag(2^{\frac{j}{2}},2^{j})$.

\end{frame}


\begin{frame}\frametitle{Cone-Adapted Shearlet Systems}

 {\color{ZurichBlue} Shearlet bases?}
 
 Unlike wavelet systems, the cone-adapted shearlet systems are not orthonormal bases. But we still have:
 \vspace*{0.3cm}
 
{\color{ZurichBlue} Theorem: (Kittipoom, Kutyniok, Lim; 2012)}\\
Let $\phi, \psi, \tilde{\psi} \in L^2(\R^2)$ satisfy a number of vanishing moments and smoothness conditions. Then $(\psi_{j,k,m,\iota})_{(j,k,m,\iota)\in \Lambda}$ satisfies
\begin{align*}
 \|f\|_{L^2(\R^2)} \sim \| (\langle f, \psi_{j,k,m,\iota}\rangle )_{(j,k,m,\iota)\in \Lambda}\|_{\ell_2}.
\end{align*}
\end{frame}

\begin{frame}\frametitle{Approximation Rates}

Functions $f = f_1 + \chi_Bf_2$ with $B \subset (0,1)^2$ and $\partial B \in C^2$, $f_i \in C^2$, $\supp f_i \subset (0,1)^2$ are called {\color{green}cartoon-like functions}.
\begin{center}
\includegraphics[width = 0.25\textwidth]{images/Cartoon-eps-converted-to.pdf} \qquad \includegraphics[width=0.35\linewidth]{images/window.jpg}
\end{center}


{\color{ZurichBlue} Theorem: (Labate, Guo; 2007/ Kutyniok, Lim; 2011)}\\
The error of the best $N$-term approximation for cartoon-like images with the shearlet frame decays as {\color{green}$O(N^{-1}( \log(N))^\frac{3}{2})$}.\\
\vspace*{0.1cm}

This rate is optimal up to the log factors, [Donoho; 2001].
\end{frame}

\begin{frame}\frametitle{Approximation Rates}
